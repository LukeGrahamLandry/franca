#test fn field_ordering() = {
    A :: @struct(a: i64, b: i64);
    
    // we set the named field, not just based on index (an embarrassingly recent innovation). 
    a: A = (b = 1, a = 2);
    assert_eq(a.a, 2);
    assert_eq(a.b, 1);
    
    shared := 123;
    inc :: fn() i64 => {
        shared += 1;
        shared
    };
    
    // Evaluation order is based on this expression, not the declaration. 
    a: A = (b = inc(), a = inc());
    assert_eq(a.b, 124);
    assert_eq(a.a, 125);
    shared = 123;
    a: A = (a = inc(), b = inc());
    assert_eq(a.b, 125);
    assert_eq(a.a, 124);
}

