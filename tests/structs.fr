#test fn unions_exist() = {
    A :: @union(i: u64, f: f64);
    assert_eq(size_of(u64), size_of(A));
    
    a: A = (i = 0x7ffc000000000000);    
    ::assert_eq(u64);
    assert_eq(a.i, 0x7ffc000000000000);
    assert(a.f.is_nan(), "expected nan");
    
    a.f = 1.0;
    i: i64 = 1.0.bitcast();
    i: u64 = i.bitcast();
    assert_eq(a.i, i);
}

