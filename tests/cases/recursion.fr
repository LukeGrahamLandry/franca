#test(aarch64)
fn main(canary: i64) i64 = {
    //////
    /// normal recursion
    fn fib(n: i64) i64 = {
        (le(n, 1),
            fn() i64 = 1,
            fn() i64 = add(fib(n.sub(1)), fib(n.sub(2))),
        )!if
    }
    
    assert_eq(fib(5), 8);
    
    //////
    /// mutual recursion
    fn do_1(n: i64) i64 = if(n.eq(2), fn = do_2(n), fn = 1);
    fn do_2(n: i64) i64 = if(n.eq(1), fn = do_1(n), fn = 2);

    assert_eq(do_2(2), 2);
    assert_eq(do_1(1), 1);
    assert_eq(do_1(2), 2);
    
    canary
}
