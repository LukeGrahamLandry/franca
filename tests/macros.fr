#test fn if_chains() = {
    a := @if_else {
        @if(false) => 0;
        @if(true)  => 1;
        @if(panic("dont evaluate this"))  => 2;
        @else      => 3;
    };
    assert_eq(a, 1);
    shared := 0;
    side_effect :: fn() => {
        shared += 1;
        false
    };
    a := @if_else {
        @if(side_effect()) => 0;
        @if(side_effect()) => 1;
        @else      => 3;
    };
    assert_eq(a, 3);
    assert_eq(shared, 2);
}
 
#test fn bit_mask_for_is() = {
    E :: @tagged(A: i64, B: i64, C: i64, D: i64);
    ::tagged(E);
    e: E = (A = 123);
    assert( @is(e&, .A, .C), "");
    assert(!@is(e&, .B, .D), "");
    assert( @is(e&, .A, .D), "");
    assert( @is(e&, .A, .B, .C, .D), "");
    assert(!@is(e&, .B, .C, .D), "");
}

