#test fn adding_new_match() = {
    E :: @tagged(A: i64, B: i64, C: i64, D: i64);
    fn unpack(e: E) i64 = {
        @match(e) {
            fn A(x) => { x }; 
            fn B(x) => { x * 2 };
            @default => { 999 };
        }
    }
    
    //println("Hello!");
    e: E = (A = 123);
    assert_eq(e.unpack(), 123);
    //println("a!");
    e: E = (B = 4);
    assert_eq(e.unpack(), 8);
    //println("b!");
    e: E = (C = 1);
    assert_eq(e.unpack(), 999);
    //println("c!");
    e: E = (D = 1);
    assert_eq(e.unpack(), 999);
}

