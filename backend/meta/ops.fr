tables :: gen_table();

fn ops_table_argscls(value: i64, k: Qbe.Cls, argument_index: i64) Qbe.Cls = {
    off := ((intcast @as(i32) k) * 3) + argument_index*12;
    it  := value.shift_right_logical(off).bit_and(0b111);
    it  := @as(i32) it.intcast();
    @as(Qbe.Cls) it
}

fn arithmetic_identity_table(o: Qbe.O) Ty(bool, u64) = {
    value := tables[intcast @as(i32) o];
    (value.read_op_bit(.has_id), value.read_op_bit(.id_val).int().bitcast())
}

fn ops_table_amd_flag(o: Qbe.O) Ty(bool, bool) = {
    value := tables[intcast @as(i32) o];
    (value.read_op_bit(.amd_sets_zero_flag), value.read_op_bit(.amd_leaves_flag))
}

get :: fn(o: Qbe.O, i: OpBit) bool = 
    tables[intcast @as(i32) o].read_op_bit(i);

fn read_op_bit(value: i64, i: OpBit) bool = 
    value.shift_right_logical(24 + @as(i64) i).bit_and(1) != 0;

OpBit :: @enum(
    amd_memarg_one,  // see amd64_memargs()
    amd_memarg_either,
    amd_sets_zero_flag,
    amd_leaves_flag,
    rv_imm,
    can_fold,
    has_id,  // to=a[0] if a[1]=id_val
    id_val,
    pinned, 
    eqval,  // to=eqval if a[0]=a[1] if int cmp
    cmplgtewl,  /* c[us][gl][et][wl] */
    cmpeqwl,  /* c{eq,ne}[wl] */ 
    idempotent,  // to=a[0] if a[0]=a[1]
    associative,
    commutative,
);

gen_table :: fn() []i64 = {
    C :: Qbe.Cls;
    w :: C.Kw; l :: C.Kl; s :: C.Ks; d :: C.Kd; e :: C.Ke; x :: C.Kx; m :: l;
    T :: fn(a: C, b: C, c: C, d: C, e: C, f: C, g: C, h: C) u32 #fold = {  // 24 bits
        r: u32 = 0;
        R :: fn(k: C) void => {
            r = r.bit_or(@as(u32) bitcast @as(i32) k).shift_left(3);
        };
        R(h); R(g); R(f); R(e); R(d); R(c); R(b); R(a); 
        r.shift_right_logical(3)
    };
    
    X :: fn(NMemArgs: i64, SetsZeroFlag: i64, LeavesFlags: i64) i64 #fold = // 4 bits
        (NMemArgs + SetsZeroFlag*4 + LeavesFlags*8).shift_left(24);
    P :: fn(CanFold: i64, HasId: i64, IdVal: i64) i64 #fold = // 3 bits
        (CanFold + HasId*2 + IdVal*4).shift_left(24+4+1);
    V :: fn(v: i64) i64 #fold =  // 1 bit
        v.shift_left(24+4); 
    
    fn O();
    fn O(o: Qbe.O, t: i64, p: i64, x: i64, v: i64) void = 
        O(o, t, p, x, v, 0);
    fn O(o: Qbe.O, t: i64, p: i64, x: i64, v: i64, g: u7) void = {
        g := shift_left(@as(i64) g, 24+4+3+1);
        argcls[intcast @as(i32) o] = t.bit_or(p).bit_or(x).bit_or(v).bit_or(g);
    };
    // for the ones that use this, g=1 is either right or its a late op and doesn't matter
    fn O(o: Qbe.O, t: i64) void = O(o, t, P(0,0,0), X(0,0,0), V(0), 0b000001);  
    
    argcls :: ast_alloc().alloc_zeroed(i64, Qbe.O.enum_count());

    
