data $fmt = { b "swap:  %#010x %#010x\nrot8:  %#010x %#010x\nrot12: %#010x %#010x\nover:  %#010x %#010x\ncount: %d %d %d %d %d %d\n" }

export
function w $main() {
@start
    call $run(w 0x12345678, w 12, w 0)
	ret 0
}

export
function $run(w %a, w %twelve, w %zero) {
@start
    %bytes =w byteswap %a
    %r8  =w rotr %a, 8
    %l8  =w rotl %a, 8
    %r12 =w rotr %a, %twelve
    %l12 =w rotl %a, %twelve
    %lover =w rotr %a, %a
    %rover =w rotl %a, %a
    %N  =w mul %a, 2  # just to make it asymmetrical 
    %zt =w ctz %N
    %zl =w clz %N
    %zo =w ones %N
    %zero_t =w ctz %zero
    %zero_l =w clz %zero
    %zero_o =w ones %zero
    %_ =w call $printf(l $fmt, ..., w %a, w %bytes, w %l8, w %r8, w %l12, w %r12, w %lover, w %rover, w %zt, w %zl, w %zo, w %zero_t, w %zero_l, w %zero_o)
	ret
}

