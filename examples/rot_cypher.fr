#!/usr/bin/env franca

fn main() void = {
    text := "hello world";
    mem := text.clone(temp()).items();
    range(0, 26) { shift | 
        each mem { c | 
            if c[] >= "a".ascii() && c[] <= "z".ascii() {
                c[] = trunc((c[].zext() - "a".char() + shift).mod(26) + "a".char());
            };
        };
        @println("%%) %", if(shift < 10, => " ", => ""), shift, mem);
        mem.copy_from(text);  // :slow. if you care just +1 each loop
    };
}
