fn should_jit() bool = {
    args := cli_args();
    for args { arg |
        s := arg.str();
        a: ?bool = .None;
        @switch(s) {
            @case("-aot") => {
                a = (Some = false);
            };
            @case("-jit") => {
                a = (Some = true);
            };
            @default => ();
        };
        if a {a|
            return(a);
        };
    };
    panic("Please pass -jit or -aot as an argument. (aot runs ~10x faster, dont forget to run the exe tho")
}
