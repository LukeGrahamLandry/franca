fn vol_2x32(p: *u32) i64 =
    p.vol().zext().bit_or({ p := p.offset(1); p.vol() }.zext().shift_left(32));

fn vol_2x32(p: *u32, val: i64) void = {
    p.vol(val.trunc());
    p := p.offset(1);
    p.vol(val.shift_right_logical(32).trunc());
}

