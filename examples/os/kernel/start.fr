Kernel :: @struct {
    physical: Physical;
    // for now i always increase the virtual addresses being handed out 
    // so you can tell which address space a pointer is in for debugging. 
    next_vaddr: i64;
    tasks: Array(Task, 16);
    next_task_to_run: i64;
    next_task_id: i64;
    env: rawptr;
    interrupt_stack: []u8;
    timer_counter: u64;
    idle_task: Task;
    pages_reserved: i64;
    pages_committed: i64;
    pages_reserved_freed: i64;
    pages_committed_freed: i64;
    device_tree: []u8;
    page_size: i64;
    page_index_bits: []i64;
    kernel_image: []u8;
    user_image: []u8;
    ram: []u8;
};

fn kernel() *Kernel = {
    // when the mmu is off, all memory is treated as device memory and doesn't allow unaligned access. 
    // (and my flat_link doesn't align the data segment)
    kernel := aligned_static(Kernel, 8);
    kernel
}

DT :: import("@/examples/os/drivers/devicetree.fr");

// this is called by emit_entry's _start
main :: fn(device_tree: i64, _sp: i64, kernel_image_base: i64) void = {
    link_image_base: i64 = 0x40100000;
    kernel_image_size := -1;
    if device_tree == 0 || kernel_image_base == -4 {
        // qemu running as elf instead of as linux image
        device_tree = 0x40000000;
        kernel_image_base = link_image_base;
        kernel_image_size = 1.shift_left(23);  // TODO: tighter bound. 
    } else {
        // LinuxBootHeader.image_size
        kernel_image_size = i64.ptr_from_int(kernel_image_base + 16)[];
    };
    kprint_label("kernel_image_size ", kernel_image_size);
    // TODO: could allow data relocations in the kernel. 
    //       just read elf sections here and do it based on kernel_image_base-link_image_base
    //       but be careful because the linux header stomps part of the elf header. 
    
    dt := DT.Header.ptr_from_int(device_tree)[];
    DT.Header.byte_swap_fields(dt&);
    if dt.magic != DT.MAGIC {
        kpanic("bad dt magic");
    };
    device_tree_bytes := u8.ptr_from_int(device_tree).slice(dt.totalsize.zext());
    
    _, c := create_and_set_unsafe_environment();
    c.panic_hook = kpanic;
    kprint("Hi\n");
    
    el := i64.sys_get(.CurrentEL).shift_right_logical(2);
    if el != 1 {
        kprint_label("el ", el);
        kpanic("expected to run in el1");
    };
    if i64.sys_get(.ID_AA64ISAR0_EL1).shift_right_logical(20).bit_and(0b1111) == 0 {
        kprint("WARNING: atomic instructions are not implemented on this cpu (qemu: try -cpu cortex-a76)\n");
    };
    if i64.sys_get(.ICC_SRE_EL1).bit_and(1) == 0 {
        kprint("WARNING: ICC_SRE_EL1 (system register interface for GIC) is disabled\n");
    };
    
    kernel := kernel();
    kernel.choose_page_size();
    ram := find_physical_memory(DT'iter(device_tree_bytes));
    kernel.ram = ram;
    //kprint_label("main ", int_from_rawptr(main));  // TODO: this really freaks it out
    //kprint_label("ram.ptr ", u8.int_from_ptr(ram.ptr));
    //kprint_label("ram.len ", ram.len);
    //kprint_label("kernel_image_base ", kernel_image_base);
    //kprint_label("device_tree_bytes.ptr ", u8.int_from_ptr(device_tree_bytes.ptr));
    //kprint_label("device_tree_bytes.len ", device_tree_bytes.len);

    end_of_kernel := (kernel_image_base + kernel_image_size).ualign_to(kernel.page_size);
    before_end_of_kernel := end_of_kernel - u8.int_from_ptr(ram.ptr);
    kernel.kernel_image = u8.ptr_from_int(kernel_image_base).slice(end_of_kernel - kernel_image_base);
    kernel.physical.remaining = (
         ptr = u8.ptr_from_int(end_of_kernel), 
         len = ram.len - before_end_of_kernel,
    );
    //kprint_label("physical.len ", kernel.physical.remaining.len);
    // TODO: don't include this in physical.free, don't want to stomp it. 
    //@if(kernel.physical.remaining.contains_address(device_tree_bytes.ptr)) kpanic("free ram stomps device tree");
    kernel.next_vaddr = u8.int_from_ptr(ram.end_pointer()) + 0x40000000;
    kernel.env = get_dynamic_context();
    kernel.device_tree = device_tree_bytes;
    
    // TODO: maybe better to use this to only save on interrupt if they're actually being used by that process
    cpacr := i64.sys_get(.CPACR_EL1);
    i64.sys_set(.CPACR_EL1, cpacr.bit_or(0b11.shift_left(20)));  // FPEN
    
    // EL0PCTEN: allow userspace to read CNTVCT_EL0 and CNTFRQ_EL0
    cntctl := i64.sys_get(.CNTKCTL_EL1);
    i64.sys_set(.CNTKCTL_EL1, cntctl.bit_or(2));

    find_pci_devices(device_tree_bytes);
    tt := setup_virtual_memory(ram);
    setup_interrupts();
    
    kstack := kernel.physical&.map_contiguous(16 * 1.shift_left(16), 1);
    kernel.interrupt_stack = kstack;

    ::[]Task;
    task := kernel.idle_task&;
    task.slice(1).set_zeroed();
    task.mem.root = tt;
    task.kernel_sp = kernel.interrupt_stack.end_pointer();
    init_task(task, spin);

    kernel.next_task_id = 1;
    task := kernel.alloc_task(tt);
    init_task(task, user_exec);
    elf_bytes := root_task_elf_bytes;
    task.mcontext.gpr&[0] = kernel.launder_to_user_pointer(u8.raw_from_ptr(elf_bytes.ptr));
    task.mcontext.gpr&[1] = elf_bytes.len;
    
    kprint("kernel ready\n");
    return_to_scheduler();
}

// TODO: nicer api for device tree
find_physical_memory :: fn(self: DT.Iter) []u8 = {
    dowhile {
        it := self&.next();
        ::enum(@type it.tag);
        @if(it.tag == .END) kpanic("no memory node");
        !(it.tag == .BEGIN_NODE && it.name.starts_with("memory"))
    };
    depth := self.depth;
    // read its childen
    // annoying: vol_2x32 is just for avoiding unaligned read so it works without mmu, not because its actually volatile.
    dowhile {
        it := self&.next();
        if it.name == "reg" {
            data := u32.reinterpret_bytes(it.data);
            addr := data.index(0).vol_2x32().byte_swap();
            size := data.index(2).vol_2x32().byte_swap();
            return(ptr = u8.ptr_from_int(addr), len = size);
        };
        
        self.depth >= depth
    };
    kpanic("devicetree: no memory.reg")
}

find_pci_devices :: fn(device_tree_bytes: []u8) void = {
    kernel := kernel();
    // TODO: make this work with the mmu turned on. just need to identity map the magic ranges. 
    pci := Pci'read_device_tree(DT'iter(device_tree_bytes));
    pci := pci || kpanic("failed to read pci addresses from device tree");
    
    range(0, pci.config.len / 4096) { i |
        continue :: local_return;
        h := bit_cast_unchecked(*u8, *Pci.Header, pci.config.index(i*4096));
        vendorid := h.vendor_id&.volatile();
        
        if(vendorid == 0xFFFF, => continue());
        if(vendorid != Virt.pci_vendor_id, => continue());
        
        deviceid := h.device_id&.volatile();
        if !(deviceid == 0x1043 || deviceid == 0x1003) {  // console
            continue();
        };
        header_type := h.header_type&.vol();
        
        h.command&.vol(0b110);  // enable memory space
        
        note_cap := h.find_pci_cap(.NOTIFY);
        c := h.find_pci_cap(.COMMON).unwrap();
        bar_index := c.bar&.volatile();
        
        // TODO: keep track of the part thats been used so i can have multiple BARs
        legal_pci_addr := u8.int_from_ptr(pci.bar.ptr);  
        bar := Pci'set_bar64(h, bar_index, legal_pci_addr, true);
        cfg := bit_cast_unchecked(*u8, *Virt.PciCommonCfg, bar.mem.index(c.offset&.vol().zext()));
        
        note: ?Virt.NotifyStep = .None;
        if note_cap { c | 
            @if(bar_index != c.bar&.vol()) kpanic("TODO: can this happen?");
            note = (Some = (
                off_multiplier = u32.vol(int_from_ptr(@type c[], c) + size_of(@type c[])).zext(),
                base = c.offset&.vol().zext(),
                bar = bar.mem,
            ));
        };
    
        feat := 1.shift_left(32);  // VIRTIO_F_VERSION_1
        agree := cfg.init_features(feat);
        @if(agree != feat) kpanic("didn't agree on device features");
        
        buf := kernel.physical&.map_contiguous(1.shift_left(16), 1);
        each buf { it |
            it[] = 0;
        };
        
        // q[1] = transmitq(port0)
        q := init_queue(cfg, 1, buf, 128, note); q := q&;
        cfg.publish_queues();
        q.push("Hello", 0);
        q.push("World", 0);
        q.push("!\n", 0);
        q.publish_chain();
    };
}

