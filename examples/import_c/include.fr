stdatomic :: """
    #pragma once
    
    #define __builtin_compare_and_swap(__p, __expected, __new) ({\
        typeof(__p) ___expected = __expected;\
        typeof(*__p) __old = *___expected;\
        *___expected = __builtin_cas(__p, __old, __new);\
        __old == *___expected;\
    })
    
    #define __builtin_atomic_exchange(__p, __new) ({\
        typeof(__p) ___p = __p;\
        typeof(*__p) ___new = __new;\
        typeof(*__p) val;\
        do {\
            val = *___p;\
        } while(!__builtin_compare_and_swap(___p, &val, ___new));\
        val;\
    })
        
    #define ATOMIC_BOOL_LOCK_FREE 1
    #define ATOMIC_CHAR_LOCK_FREE 1
    #define ATOMIC_CHAR16_T_LOCK_FREE 1
    #define ATOMIC_CHAR32_T_LOCK_FREE 1
    #define ATOMIC_WCHAR_T_LOCK_FREE 1
    #define ATOMIC_SHORT_LOCK_FREE 1
    #define ATOMIC_INT_LOCK_FREE 1
    #define ATOMIC_LONG_LOCK_FREE 1
    #define ATOMIC_LLONG_LOCK_FREE 1
    #define ATOMIC_POINTER_LOCK_FREE 1
    
    typedef enum {
      memory_order_relaxed,
      memory_order_consume,
      memory_order_acquire,
      memory_order_release,
      memory_order_acq_rel,
      memory_order_seq_cst,
    } memory_order;
    
    #define ATOMIC_FLAG_INIT(x) (x)
    #define atomic_init(p, val) (*(p) = (val))
    #define kill_dependency(x) (x)
    #define atomic_thread_fence(_)
    #define atomic_signal_fence(_)
    #define atomic_is_lock_free(_) 1
    
    #define atomic_load(p) (*(p))
    #define atomic_store(p, val) (*(p) = (val))
    
    #define atomic_load_explicit(p, _) (*(p))
    #define atomic_store_explicit(p, val, _) (*(p) = (val))
    
    // for atomic_fetch_XXX, p must be _Atomic(_)* anyway, so the update assignments already do the right thing. 
    #define atomic_fetch_add(p, val) (*(p) += (val))
    #define atomic_fetch_sub(p, val) (*(p) -= (val))
    #define atomic_fetch_or(p, val)  (*(p) |= (val))
    #define atomic_fetch_xor(p, val) (*(p) ^= (val))
    #define atomic_fetch_and(p, val) (*(p) &= (val))
    
    #define atomic_fetch_add_explicit(p, val, _) (*(p) += (val))
    #define atomic_fetch_sub_explicit(p, val, _) (*(p) -= (val))
    #define atomic_fetch_or_explicit(p, val, _)  (*(p) |= (val))
    #define atomic_fetch_xor_explicit(p, val, _) (*(p) ^= (val))
    #define atomic_fetch_and_explicit(p, val, _) (*(p) &= (val))
    
    #define atomic_compare_exchange_weak __builtin_compare_and_swap
    #define atomic_compare_exchange_strong __builtin_compare_and_swap
    #define atomic_compare_exchange_strong_explicit(p, old, new, _, __) atomic_compare_exchange_strong((p), (old), (new))
    
    #define atomic_exchange __builtin_atomic_exchange
    #define atomic_exchange_explicit(p, val, _) __builtin_atomic_exchange((p), (val))
    
    #define atomic_flag_test_and_set(p) atomic_exchange((p), 1)
    #define atomic_flag_test_and_set_explicit(p, _) atomic_exchange((p), 1)
    #define atomic_flag_clear(p) (*(p) = 0)
    #define atomic_flag_clear_explicit(p, _) (*(p) = 0)
   
    typedef _Atomic int atomic_flag;
    typedef _Atomic int atomic_bool;
    typedef _Atomic int atomic_char;
    typedef _Atomic signed int atomic_schar;
    typedef _Atomic unsigned int atomic_uchar;
    typedef _Atomic int atomic_short;
    typedef _Atomic unsigned int atomic_ushort;
    typedef _Atomic int atomic_int;
    typedef _Atomic unsigned int atomic_uint;
    typedef _Atomic long atomic_long;
    typedef _Atomic unsigned long atomic_ulong;
    typedef _Atomic long long atomic_llong;
    typedef _Atomic unsigned long long atomic_ullong;
    typedef _Atomic unsigned int atomic_char16_t;
    typedef _Atomic unsigned atomic_char32_t;
    typedef _Atomic unsigned atomic_wchar_t;
    typedef _Atomic signed int atomic_int_least8_t;
    typedef _Atomic unsigned int atomic_uint_least8_t;
    typedef _Atomic int atomic_int_least16_t;
    typedef _Atomic unsigned int atomic_uint_least16_t;
