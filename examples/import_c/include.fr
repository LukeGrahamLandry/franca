stdarg :: """
    #pragma once
    
    #if (__aarch64 && __macos) || __wasm32 || __rv64
        typedef void *va_list;
        #define va_copy(dest, src) ((dest) = (src))
    #elif __x86_64
        typedef long va_list[3];
        #define va_copy(dest, src) ({ long *__d = (dest); long *__s = (src); __d[0] = __s[0]; __d[1] = __s[1]; __d[2] = __s[2]; 0; })
    #else
        typedef struct { long __opaque[4]; } va_list;
        #define va_copy(dest, src) ((dest) = (src))
    #endif
    #define va_start(ap, ...) __builtin_va_start(ap)
    #define va_end(ap)
    #define va_arg(ap, ty)  __builtin_va_arg(ap, ty)
    
    typedef va_list __builtin_va_list;
    typedef va_list __gnuc_va_list;
""";

