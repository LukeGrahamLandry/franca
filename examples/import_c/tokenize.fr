// TODO: make this smaller!
Token :: @rec @struct(
    next: *Token,
    val: @union(f: f64, i: i64, str_buf: *u8),  // bits of an integer or float
    ty: *CType,  // string, number
    file: *File,
    off: i32,  // TODO: should be u32
    len: i32,
    kind: Tokens.TokenKind,
    no_macro: bool,
    at_bol: bool,
    has_space: bool,
    line_no: i32,
    origin: *Token,
);

File :: @struct(
    name: Str,
    contents: Str,
    
    // For #line directive
    display_name: Str,
    line_delta: i32,
);

