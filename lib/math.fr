        fn min(lhs: T, rhs: T) T = lhs.int().min(rhs.int()).trunc();
        fn max(lhs: T, rhs: T) T = lhs.int().max(rhs.int()).trunc();
        fn mod(lhs: T, rhs: T) T = lhs.int().mod(rhs.int()).trunc();
    };
    UNum(u8); 
