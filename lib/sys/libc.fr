fn usleep(micro_seconds: u32) voidResult #libc = {
    s, ns := div_mod(micro_seconds.zext(), US_PER_S);
    t: TimeSpec = (seconds = s, nanoseconds = ns);
    nanosleep(t&, TimeSpec.ptr_from_int(0))
}

