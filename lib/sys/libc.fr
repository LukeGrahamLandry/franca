fn write(stream: *FILE, bytes: []u8) voidResult = {
    written := fwrite(u8.raw_from_ptr(bytes.ptr), 1, bytes.len, stream);
    if written < bytes.len {
        return(value = -1);
    };
    (value = 0)
}

