NOSCOPE :: @as(ScopeId) scope_from_index(trunc(-1)); 

// TODO: expose id like normal struct
fn scope_from_index(i: u32) ScopeId = {
    s := ptr_cast_unchecked(u32, ScopeId, i&)[]; 
    s
