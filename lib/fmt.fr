fn parse_float(s: Str) Ty(f64, Str) = {
    value := 0.0;
    
    while => s.len > 0 && s[0] != ".".ascii() {
        c := dec_digit(s[0]) || return(value, s);
        value *= 10.0;
        value += c.float();
        s = s.rest(1);
    };
    s = s.rest(int(s.len > 0 && s[0] == ".".ascii()));
    
    scale := 0.1;
    while => s.len > 0 {
        c := dec_digit(s[0]) || return(value, s);
        value += c.float() * scale;
        scale /= 10.0;
        s = s.rest(1);
    };
    
    (value, s)
}

