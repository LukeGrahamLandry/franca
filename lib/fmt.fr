        buf: List(u8) = list(temp());
        self.value.display(buf&);
        if(self.side == .After, => out.push_all(buf.items())); // :SLOW
        range(0, max(0, self.w - buf.len)) { _ |
            out.push(" ".ascii());
        };
        if(self.side == .Before, => out.push_all(buf.items()));
    }
}

