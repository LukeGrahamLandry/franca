fn is_ascii_whitespace(c: u8) bool = c == " ".ascii() || c == "\n".ascii() || c == "\t".ascii() || c == "\r".ascii();

fn trim(s: Str) Str = {
    while => s.len > 0 && s[s.len - 1] <= 32 {
        s.len -= 1;
    };
    while => s.len > 0 && s[0] <= 32 {
        s.ptr = s.ptr.offset(1);
        s.len -= 1;
    };
    
    s
}
