fn float(s: Str) f64 = {
    value := 0.0;
    scale := 0.1;
    seen_decimal := false;
    for(s){c|
        if(seen_decimal) {
            value += dec_digit(c).float().mul(scale);
            scale = scale.div(10.0);  // TODO: /= doesn't work??
        } {
            if(c.eq(".".ascii()), => { seen_decimal = true; }) {
                value *= 10.0;
                value += dec_digit(c).float();
            }
        };
    };
    
    value
}

