// includes the '0x'... kinda cringe? 
fn fmt_hex(value: i64) Str = {
    out := "0x".clone(temp());
    range(0, 16) {i|
        shift := 15.sub(i).mul(4);
        mask := 15.shift_left(shift);
        digit := value.bit_and(mask).shift_right_logical(shift); 
        ::if(u8);
        d: u8 = digit.trunc();
        d := if(digit < 10, => "0".ascii() + d, => "A".ascii() + d - 10); 
        out&.push(d);
    };
    out.items()
}

