}

fn write_int_to_buffer(buf: []u8, i: i64) i64 = {
    if i != 0 && i == -i { // ugly twos compliment :hack
        s := "-9223372036854775808";
        enumerate s { i, c |
            buf[i] = c[];
        };
        return(s.len);
    };
    len := 0;
    inner :: fn(i: i64, buf: []u8, len: *i64) void = {
        if i < 0 {
            buf[len[]] = "-".ascii();
            len[] += 1;
            inner(-i, buf, len);
        } else {
            is_digit := i >= 0 && i < 10;
            if is_digit {
                buf[len[]] = i.trunc() + 48;
            } else {
                inner(i / 10, buf, len);
                buf[len[]] = i.mod(10).trunc() + 48;
            };
            len[] += 1;
        };
    };
    inner(i, buf&.items(), len&);
    len
}

fn display(i: i64, s: *List(u8)) void = {
    buf := @uninitialized Array(u8, 24);
    buf := buf&.items();
    len := write_int_to_buffer(buf, i);
    s.push_all(buf.slice(0, len));
}

fn display(i: u64, s: *List(u8)) void = {
    if i < 10 {
        s.push(i.trunc() + 48);
    } else {
        display(i / 10, s);
        s.push(i.mod(10).trunc() + 48);
    };
}

