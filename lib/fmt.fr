    diff :: "a".ascii() - "A".ascii();
    ::if(u8);
    if(c.lt("a".ascii()).or(c > "z".ascii()), => c, => c - diff)
}

fn ascii_to_lower(c: u8) u8 = {
    diff :: "a".ascii() - "A".ascii();
    ::if(u8);
    if(c.lt("A".ascii()).or(c > "Z".ascii()), => c, => c + diff)
}

fn ascii_is_upper(c: u8) bool = 
    c >= "A".ascii() && c <= "Z".ascii();
