#macro 
fn panic(arg: FatExpr) FatExpr = {
    if !safety_check_enabled(.KeepPanicMessages) {
        arg = @{ "panicked" };
    };
    if arg&.items().len() == 1 {
        return(@{ panic(@[arg]) });
    };
    @{
        out: List(u8) = list(0, temp()); 
        @fmt(@prepend_tuple(out&) @[arg]);
        panic(out&.items())
    }
}

