    name = "tracy",
    input_files = "bindings/tracy/public/TracyClient.cpp".single(ast_alloc()),
    macro_defines = "TRACY_ENABLE=1".single(ast_alloc()),
    include_paths = "bindings/tracy".single(ast_alloc()),
    cpp = true,
