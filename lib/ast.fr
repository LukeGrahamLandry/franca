const AstExpr = FatExpr;

@pub fn infer_raw_deref_type(expr: FatExpr) TypeInfo;
@pub fn promote_closure(expr: FatExpr) FuncId;

// @cap(io)
@pub fn print_ast(v: FatExpr) Unit;

