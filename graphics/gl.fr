fn load_identity(ctx: *Context) void = {
    ctx.matrix_dirty = true;
    identity(matrix(ctx));
}

fn as_matrix(m: []f32) *Matrix = {
    @debug_assert(m.len == 4*4, "invalid matrix size");
    ptr_cast_unchecked(From = f32, To = Matrix, m.ptr)
}

fn load_matrix(ctx: *Context, m: *Matrix) void = {
    ctx.matrix_dirty = true;
    matrix(ctx)[] = m[];
}

fn load_transpose_matrix(ctx: *Context, m: *Matrix) void = {
    ctx.matrix_dirty = true;
    transpose(matrix(ctx), m);
}

fn mult_matrix(ctx: *Context, m: *Matrix) void = {
    ctx.matrix_dirty = true;
    mul(matrix(ctx), m);
}

fn mult_transpose_matrix(ctx: *Context, m: *Matrix) void = {
    ctx.matrix_dirty = true;
    m0 := @uninitialized Matrix;
    transpose(m0&, m);
    mul(matrix(ctx), m0&);
}

fn rotate(ctx: *Context, angle_rad: f32, x: f32, y: f32, z: f32) void = {
    ctx.matrix_dirty = true;
    rotate(matrix(ctx), angle_rad, x, y, z);
}

fn scale(ctx: *Context, x: f32, y: f32, z: f32) void = {
    ctx.matrix_dirty = true;
    scale(matrix(ctx), x, y, z);
}

fn translate(ctx: *Context, x: f32, y: f32, z: f32) void = {
    ctx.matrix_dirty = true;
    translate(matrix(ctx), vec3(x, y, z));
}

fn frustum(ctx: *Context, l: f32, r: f32, b: f32, t: f32, n: f32, f: f32) void = {
