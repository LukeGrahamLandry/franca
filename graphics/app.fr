fn set_icon(sapp: *Common, desc: *IconDesc) void = {
    num_images := icon_num_images(desc);
    if(num_images == 0, => return());
    @debug_assert(num_images > 0 && num_images <= max_icon_images);
    if(!validate_icon_desc(desc, num_images), => return());
    sapp.impl().set_icon(desc, num_images);
}

