fn driver(vtable: *ImportVTable) void = {
    c := cli_args();
    start := false;
    did := 0;
    for c {s: CStr|
        s : Str = s.str();
        continue :: local_return;
        if !start {
            if(!(s == "--"), => { continue(); });
            start = true;
        };
        did += 1;
        @switch(s) {
            @case("--") => ();
            @case("arm") => {
                println("=== Aarch64 Jit ===");
                run_jit(vtable, .Aarch64);
            };
            @case("cranelift") => {
                println("=== Cranelift Jit ===");
                run_jit(vtable, .Cranelift);
            };
            @case("llvm") => run_llvm(vtable, false);
            //@case("llvm-wasm") => run_llvm(vtable, true);
            // TODO: new sema can't compile this yet. 
            //       but also who cares 'til i fix it
            @case("qbe") => run_qbe(vtable);
            @case("examples") => run_examples(vtable, true);
            @case("github") => github(vtable);
            @default => {
                @println("Unknown argument '%'", s);
                println(HELP);
            };
        };
    };
    
    if(did <= 1, => println(HELP));
    HELP :: "start with \"-- \" to seperate from compiler args, then any of [arm, llvm, qbe, examples]";

    // TODO: do this in the loop
    //__temp_alloc.reset_retaining_capacity();
    // TODO: see if it breaks if you run new ones in thier own namespaces in the same compiler instance as ^ 
}

