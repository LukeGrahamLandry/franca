fn follow_redirects(program: CompCtx, f_id: FuncId) FuncId = {
    dowhile() {
        @match(program.get_function(f_id)[].body&) {
            fn Redirect(target) => {
                f_id = target[];
                true
            }
            @default => false;
        }
    };
    f_id
}

