{
  "vim_mode": true,
  "ui_font_size": 13,
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrains Mono NL",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },
  "soft_wrap": "none",
  "remove_trailing_whitespace_on_save": false,
  "ensure_final_newline_on_save": false,
  "format_on_save": "off",
  "languages": {
    "Markdown": {
      "format_on_save": "off"
    },
    "Franca": {
      "format_on_save": "off"
    }
  },
  "show_completions_on_input": false,
  "agent": {
    "enabled": false,
    "version": "2"
  },
  "tabs": {
    "show_diagnostics": "off"
  },
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },
  "autosave": "on_focus_change",
  "debugger": {
    "button": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "gutter": {
    "breakpoints": false,
    "runnables": false
  },
  "indent_guides": {
    "enabled": false
  },
  "auto_update": false,
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "diagnostics": {
    "button": false
  },
  "search": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "title_bar": {
    "show_sign_in": false
  },
  "project_panel": {
    "diagnostics": "none"
  },
  "scrollbar": {
    "diagnostics": "none"
  }
}
